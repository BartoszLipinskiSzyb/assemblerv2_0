use ./lib/stdio.a

// variable definitions
*dx = 0
*dy = 1
*D = 2

*x0 = 3
*y0 = 4
*x1 = 5
*y1 = 6

*temp = 7

start:
// reading input from user
DECIMAL -> *x0
DECIMAL -> *y0
DECIMAL -> *x1
DECIMAL -> *y1

use ./lib/reset-pixel.a

plotLine:
*x1 - *x0 -> *dx
*y1 - *y0 -> *dy

*dy + *dy -> *temp
*temp - *dx -> *D

loopX:
	// plot
	*x0 -> DISP_X
	*y0 -> DISP_Y
	PIXEL_ON -> DISP_DATA
	
	0 - *D -> _ if!- go skipif
	
	    *y0 + 1 -> *y0
	    *dx + *dx -> *temp
	    *D - *temp -> *D
	
    skipif:

    *dy + *dy -> *temp
    *D + *temp -> *D

// check if drawing is complete
*x0 + 1 -> *x0
*x1 - *x0 -> _ if!- go loopX

halt:
    go halt
